generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["interactiveTransactions"]
}

generator docs {
    provider = "node node_modules/prisma-docs-generator"
    output   = "../docs/schema"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Session {
    id        String   @id
    sid       String   @unique
    data      String
    expiresAt DateTime
}

model User {
    matricula String  @id
    email     String  @unique
    password  String
    isAdmin   Boolean @default(false)
    Post      Post[]
}

model Biulding {
    name      String  @id
    latitude  Float
    longitude Float
    rooms     Rooms[]
}

model Rooms {
    identification String    @id
    latitude       Float
    longitude      Float
    subjects       Subject[]
    biulding       Biulding? @relation(fields: [biuldingname], references: [name])
    biuldingname   String?
}

model Subject {
    codeId  String   @id
    time    DateTime
    teacher String
    class   Int
    room    Rooms?   @relation(fields: [roomID], references: [identification])
    roomID  String?
}

model Post {
    title         String   @id
    text          String
    data          DateTime
    user          User     @relation(fields: [userMatricula], references: [matricula])
    userMatricula String
}
